@page "/"

<PageTitle>Users</PageTitle>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="NavigateToAdd">Add new</button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Password</th>
                <th>Registered</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.Password</td>
                    <td>@user.Registration_Time.ToLocalTime()</td>
                    <td>
                        <button class="btn btn-primary me-2" @onclick="@(() => NavigateToEdit(user.Id))">Edit</button>
                        <button class="btn btn-danger" @onclick="@(() => Delete(user.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}